{
  "variables": {
    "build_version": "1.0.19",
    "base_ami":"ami-8519a9f6",
    "user":"Administrator",
    "password":"FooBar@123",
    "instance_type":"t2.small",
    "vpc_id":"",
    "subnet_id":""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "name": "base-ami",
      "region": "eu-west-1",
      "source_ami": "{{user `base_ami`}}",
      "instance_type": "{{user `instance_type`}}",
      "ami_name": "{{isotime \"2006-01-02\"}}-packer-build-{{user `build_version`}}",
      "user_data_file":"./build/packer/scripts/Ec2Bootstrap.ps1",
      "associate_public_ip_address":true,
      "communicator": "winrm",
      "winrm_username": "{{user `user`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}"
    }
  ],
  "provisioners": [
    {
      "type":"powershell",
      "scripts": [
        "./build/packer/scripts/Puppet.ps1",
        "./build/packer/scripts/Ec2Config.ps1",
        "./build/packer/scripts/BundleConfig.ps1"
      ]
    },
    {
      "type":"windows-shell",
      "scripts": [
        "./build/packer/scripts/PuppetModules.bat"
      ]
    },
    {
      "type":"powershell",
      "scripts": [
        "./build/packer/scripts/PuppetChocolateyFix.ps1"
      ]
    },
    {
      "type": "file",
      "source": "./build/packer/puppet/site.pp",
      "destination": "C:\\site.pp"
    },
    {
      "type": "windows-shell",
      "scripts": [
        "./build/packer/scripts/PuppetRun.bat"
      ]
    }
  ]
}

